    // }

    postStatusSelect.addEventListener('change', handleReasonRejectVisibility);
    function handleReasonRejectVisibility() {
        if (postStatusSelect.value === 'rejected') {
            reasonRejectContainer.style.display = 'block';
        } else {
            reasonRejectContainer.style.display = 'none';
            postReasonRejectInput.value = '';
        }
    }

    // Thêm mới hoặc cập nhật bài đăng
    postForm.addEventListener('submit', async function(event) {
        event.preventDefault();
        const formData = new FormData(postForm);
        const postData = Object.fromEntries(formData.entries());
        let url = '/admin/posts';
        let method = 'POST';
        if (currentEditingPostId) {
            url += `/${currentEditingPostId}`;
            method = 'PUT';
        }
        await fetch(url, {
            method: method,
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(postData)
        });
        postModal.hide();
        postForm.reset();
        currentEditingPostId = null;
        renderPosts();
    });

    // Xóa bài đăng
    function addDeleteItemEventListeners() {
        document.querySelectorAll('.delete-item-btn').forEach(button => {
            button.addEventListener('click', async function() {
                const id = this.getAttribute('data-id');
                const type = this.getAttribute('data-type');
                if (type === 'post') {
                    if (confirm('Bạn có chắc chắn muốn xóa bài đăng này?')) {
                        await fetch(`/admin/posts/${id}`, { method: 'DELETE' });
                        renderPosts();
                    }
                } else if (type === 'user') {
                    if (confirm('Bạn có chắc chắn muốn xóa người dùng này?')) {
                        await fetch(`/admin/users/${id}`, { method: 'DELETE' });
                        renderUsers();
                    }
                }
            });
        });
    }

    // --- Quản lý Người Dùng ---
    const usersTableBody = document.getElementById('usersTableBody');
    async function fetchUsers() {
        const res = await fetch('/admin/users');
        return res.json();
    }
    async function renderUsers() {
        const users = await fetchUsers();
        usersTableBody.innerHTML = '';
        if (!users || users.length === 0) {
            usersTableBody.innerHTML = '<tr><td colspan="7" class="text-center">Chưa có người dùng nào.</td></tr>';
            return;
        }
        users.forEach((user, index) => {
            const row = usersTableBody.insertRow();
            row.innerHTML = `
                <th scope="row">${index + 1}</th>
                <td>${user.username}</td>
                <td>${user.email}</td>
                <td>${user.full_name}</td>
                <td>${user.role.charAt(0).toUpperCase() + user.role.slice(1)}</td>
                <td><span class="badge bg-${user.is_active ? 'success' : 'danger'}">${user.is_active ? 'Hoạt động' : 'Khóa'}</span></td>
                <td class="text-center">
                    <button class="btn btn-sm btn-danger btn-action delete-item-btn" data-id="${user.id}" data-name="${user.username}" data-type="user"><i class="fas fa-user-slash"></i> Xóa</button>
                </td>
            `;
        });
        addUserEventListeners(users);
        addDeleteItemEventListeners();
    }
    function addUserEventListeners(users) {0
        document.querySelectorAll('.edit-user-btn').forEach(button => {
            button.addEventListener('click', function() {
                const userId = parseInt(this.getAttribute('data-id'));

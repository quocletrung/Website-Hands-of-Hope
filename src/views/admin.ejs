    <script>
        document.addEventListener('DOMContentLoaded', function () {
    const navLinks = document.querySelectorAll('#sidebar-wrapper .nav-link[data-section]');
    const sections = document.querySelectorAll('.admin-section');

    navLinks.forEach(link => {
        link.addEventListener('click', function (e) {
            e.preventDefault();
            // Xóa active khỏi tất cả link
            navLinks.forEach(l => l.classList.remove('active'));
            // Ẩn tất cả section
            sections.forEach(sec => sec.classList.remove('active'));

            // Active link vừa click
            this.classList.add('active');
            // Hiện section tương ứng
            const sectionId = this.getAttribute('data-section') + '-section';
            const section = document.getElementById(sectionId);
            if (section) section.classList.add('active');
            // Đổi tiêu đề navbar nếu muốn
            const pageTitle = this.textContent.trim();
            const pageTitleElem = document.getElementById('page-title');
            if (pageTitleElem) pageTitleElem.textContent = pageTitle;
        });
    });
});
    document.addEventListener('DOMContentLoaded', function () {
    // ...sidebar, section, toggle code giữ nguyên...

    // --- Quản lý Bài Đăng ---
    const postsTableBody = document.getElementById('postsTableBody');
    const postModal = new bootstrap.Modal(document.getElementById('postModal'));
    const postForm = document.getElementById('postForm');
    const postModalLabel = document.getElementById('postModalLabel');
    const editPostIdInput = document.getElementById('editPostId');
    const postStatusSelect = document.getElementById('postStatus');
    const reasonRejectContainer = document.getElementById('reasonRejectContainer');
    const postReasonRejectInput = document.getElementById('postReasonReject');
    let currentEditingPostId = null;

    // Lấy danh sách bài đăng từ backend
    async function fetchPosts() {
        const res = await fetch('/admin/posts');
        return res.json();
    }
    renderPosts();
    renderUsers();
    updatePendingPostsCount();

    async function updatePendingPostsCount() {
        try {
            const res = await fetch('/admin/posts/pending/count');
            const data = await res.json();
            document.getElementById('pending-posts-count').textContent = data.count;
        } catch (e) {
            document.getElementById('pending-posts-count').textContent = '0';
        }
    }
    async function renderPosts() {
        const posts = await fetchPosts();
        postsTableBody.innerHTML = '';
        if (!posts || posts.length === 0) {
            postsTableBody.innerHTML = '<tr><td colspan="6" class="text-center">Chưa có bài đăng nào.</td></tr>';
            return;
        }
        posts.forEach((post, index) => {
    const row = postsTableBody.insertRow();
    row.innerHTML = `
        <th scope="row">${index + 1}</th>
        <td>${post.title}</td>
        <td>${post.author ? (post.author.full_name || post.author.username) : 'Ẩn danh'}</td>
        <td>${new Date(post.created_at).toLocaleDateString('vi-VN')}</td>
        <td><span class="status-${post.status}">${post.status}</span></td>
        <td class="text-center">
            ${
                post.status === 'pending'
                ? `<button class="btn btn-sm btn-success btn-action approve-post-btn" data-id="${post.id}"><i class="fas fa-check"></i> Duyệt</button>`
                : ''
            }
            <button class="btn btn-sm btn-danger btn-action delete-item-btn" data-id="${post.id}" data-name="${post.title}" data-type="post"><i class="fas fa-trash"></i> Xóa</button>
        </td>
    `;
});
        addPostEventListeners(posts);
    }

    // function addPostEventListeners(posts) {

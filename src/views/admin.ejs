<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Hands of Hope</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/css/admin-styles.css">
</head>
<body>
    <div class="d-flex" id="wrapper">
        <div id="sidebar-wrapper">
            <div class="sidebar-heading">
                <i class="fas fa-shield-alt me-2"></i>Hands of Hope Admin
            </div>
            <div class="list-group list-group-flush">
                <a href="#dashboard" class="list-group-item list-group-item-action nav-link active" data-section="dashboard">
                    <i class="fas fa-tachometer-alt fa-fw"></i>Dashboard
                </a>
                <a href="#manage-posts" class="list-group-item list-group-item-action nav-link" data-section="manage-posts">
                    <i class="fas fa-newspaper fa-fw"></i>Quản Lý Bài Đăng
                </a>
                <a href="#manage-users" class="list-group-item list-group-item-action nav-link" data-section="manage-users">
                    <i class="fas fa-users fa-fw"></i>Quản Lý Người Dùng
                </a>
                <a href="#settings" class="list-group-item list-group-item-action nav-link" data-section="settings">
                    <i class="fas fa-cogs fa-fw"></i>Cài Đặt
                </a>
                <a href="/logout" class="list-group-item list-group-item-action nav-link mt-auto"> <i class="fas fa-sign-out-alt fa-fw"></i>Đăng Xuất
                </a>
            </div>
        </div>
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg admin-navbar">
                <div class="container-fluid">
                    <button class="btn" id="menu-toggle"><i class="fas fa-bars fs-4"></i></button>

                    <h5 class="navbar-brand mb-0 ms-2" id="page-title">Dashboard</h5> <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle me-1"></i> Admin Name </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="#">Thông tin cá nhân</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="/logout">Đăng xuất</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <div class="container-fluid p-0">
                <section id="dashboard-section" class="admin-section active">
                    <div class="page-header px-3">
                        <h2><i class="fas fa-tachometer-alt fa-fw"></i> Dashboard</h2>
                    </div>
                    <div class="p-3">
                        <div class="row">
                            <div class="col-xl-3 col-md-6 mb-4">
                                <div class="card border-left-primary shadow h-100 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Bài Đăng (Chờ duyệt)</div>
                                                <div class="h5 mb-0 font-weight-bold text-gray-800" id="pending-posts-count">12</div>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fas fa-newspaper fa-2x text-gray-300"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-md-6 mb-4">
                                <div class="card border-left-success shadow h-100 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Người Dùng (Mới)</div>
                                                <div class="h5 mb-0 font-weight-bold text-gray-800" id="new-users-count">5</div>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fas fa-users fa-2x text-gray-300"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <p>Chào mừng đến với trang quản trị Hands of Hope!</p>
                        <p>Từ đây bạn có thể quản lý các bài đăng tình nguyện, người dùng và các cài đặt khác của trang web.</p>
                    </div>
                </section>

                <section id="manage-posts-section" class="admin-section">
                    <div class="page-header px-3">
                        <h2><i class="fas fa-newspaper fa-fw"></i> Quản Lý Bài Đăng Tình Nguyện</h2>
                    </div>
                    <div class="p-3">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <input type="text" class="form-control w-50" id="searchPosts" placeholder="Tìm kiếm bài đăng...">
                            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addPostModal">
                                <i class="fas fa-plus"></i> Thêm Bài Đăng Mới
                            </button>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover table-bordered align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Tiêu Đề</th>
                                        <th scope="col">Tác Giả</th>
                                        <th scope="col">Ngày Đăng</th>
                                        <th scope="col">Trạng Thái</th>
                                        <th scope="col" class="text-center">Hành Động</th>
                                    </tr>
                                </thead>
                                <tbody id="postsTableBody">
                                    <tr>
                                        <td colspan="6" class="text-center">Đang tải dữ liệu...</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                         <nav aria-label="Post pagination">
                            <ul class="pagination justify-content-center" id="postsPagination">
                                </ul>
                        </nav>
                    </div>
                </section>

                <section id="manage-users-section" class="admin-section">
                     <div class="page-header px-3">
                        <h2><i class="fas fa-users fa-fw"></i> Quản Lý Người Dùng</h2>
                    </div>
                    <div class="p-3">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <input type="text" class="form-control w-50" id="searchUsers" placeholder="Tìm kiếm người dùng...">
                            </div>
                        <div class="table-responsive">
                            <table class="table table-hover table-bordered align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Tên Người Dùng</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Họ Tên</th>
                                        <th scope="col">Vai Trò</th>
                                        <th scope="col">Trạng Thái</th>
                                        <th scope="col" class="text-center">Hành Động</th>
                                    </tr>
                                </thead>
                                <tbody id="usersTableBody">
                                    <tr>
                                        <td colspan="7" class="text-center">Đang tải dữ liệu...</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <nav aria-label="User pagination">
                            <ul class="pagination justify-content-center" id="usersPagination">
                                </ul>
                        </nav>
                    </div>
                </section>

                <section id="settings-section" class="admin-section">
                    <div class="page-header px-3">
                        <h2><i class="fas fa-cogs fa-fw"></i> Cài Đặt Chung</h2>
                    </div>
                    <div class="p-3">
                        <p>Khu vực này dành cho các cài đặt chung của trang quản trị.</p>
                        <form>
                            <div class="mb-3">
                                <label for="siteName" class="form-label">Tên Trang Web</label>
                                <input type="text" class="form-control" id="siteName" value="Hands of Hope">
                            </div>
                            <div class="mb-3">
                                <label for="adminEmail" class="form-label">Email Quản Trị</label>
                                <input type="email" class="form-control" id="adminEmail" value="admin@handofhope.org">
                            </div>
                            <button type="submit" class="btn btn-primary">Lưu Cài Đặt</button>
                        </form>
                    </div>
                </section>
            </div>
        </div>
        </div>
    <div class="modal fade" id="postModal" tabindex="-1" aria-labelledby="postModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="postModalLabel">Thêm Bài Đăng Mới</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="postForm">
                    <div class="modal-body">
                        <input type="hidden" id="editPostId" name="postId">
                        <div class="mb-3">
                            <label for="postTitle" class="form-label">Tiêu Đề</label>
                            <input type="text" class="form-control" id="postTitle" name="title" required>
                        </div>
                        <div class="mb-3">
                            <label for="postAuthor" class="form-label">Tác Giả (Username)</label>
                            <input type="text" class="form-control" id="postAuthor" name="author" readonly> </div>
                        <div class="mb-3">
                            <label for="postContent" class="form-label">Nội Dung</label>
                            <textarea class="form-control" id="postContent" name="content" rows="10" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="postStatus" class="form-label">Trạng Thái</label>
                            <select class="form-select" id="postStatus" name="status">
                                <option value="pending">Chờ duyệt</option>
                                <option value="published">Xuất Bản</option>
                                <option value="draft">Bản Nháp</option>
                                <option value="rejected">Từ chối</option>
                            </select>
                        </div>
                        <div class="mb-3" id="reasonRejectContainer" style="display:none;">
                             <label for="postReasonReject" class="form-label">Lý do từ chối (nếu có)</label>
                             <textarea class="form-control" id="postReasonReject" name="reason_reject" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                        <button type="submit" class="btn btn-primary" id="savePostButton">Lưu Bài Đăng</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmModalLabel">Xác Nhận Xóa</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Bạn có chắc chắn muốn xóa mục "<strong id="itemNameToDelete"></strong>"? Hành động này không thể hoàn tác.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteButton">Xóa</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const sidebarLinks = document.querySelectorAll('#sidebar-wrapper .nav-link');
            const adminSections = document.querySelectorAll('.admin-section');
            const pageTitleElement = document.getElementById('page-title');
            const menuToggle = document.getElementById('menu-toggle');
            const wrapper = document.getElementById('wrapper');

            // Dữ liệu mẫu (bạn sẽ thay thế bằng API call khi có backend)
            let samplePosts = [
                { id: 1, title: 'Chung tay xây trường cho trẻ vùng cao', author: 'nguyenvana', createdAt: '2025-05-10', status: 'pending', content: 'Nội dung chi tiết bài đăng 1...' },
                { id: 2, title: 'Gây quỹ ủng hộ đồng bào lũ lụt miền Trung', author: 'tranvanb', createdAt: '2025-05-12', status: 'published', content: 'Nội dung chi tiết bài đăng 2...' },
                { id: 3, title: 'Dọn dẹp bãi biển ngày cuối tuần', author: 'admin', createdAt: '2025-05-14', status: 'draft', content: 'Nội dung chi tiết bài đăng 3...' },
                { id: 4, title: 'Lớp học tình thương cho trẻ em nghèo', author: 'lethic', createdAt: '2025-04-20', status: 'rejected', reason_reject: 'Thông tin chưa rõ ràng', content: 'Nội dung chi tiết bài đăng 4...' }
            ];
            let sampleUsers = [
                { id: 1, username: 'nguyenvana', email: 'vana@example.com', fullName: 'Nguyễn Văn A', role: 'user', isActive: true, createdAt: '2025-01-15' },
                { id: 2, username: 'tranvanb', email: 'vanb@example.com', fullName: 'Trần Văn B', role: 'user', isActive: true, createdAt: '2025-02-20' },
                { id: 3, username: 'admin', email: 'admin@handofhope.org', fullName: 'Quản Trị Viên', role: 'admin', isActive: true, createdAt: '2025-01-01' },
                { id: 4, username: 'lethic', email: 'thic@example.com', fullName: 'Lê Thị C', role: 'user', isActive: false, createdAt: '2025-03-10' }
            ];
            let currentEditingPostId = null;
            let itemToDelete = { id: null, type: null }; // type can be 'post' or 'user'

            // --- Hiển thị section ---
            function showSection(sectionId) {
                adminSections.forEach(section => {
                    if (section.id === sectionId + '-section') {
                        section.classList.add('active');
                    } else {
                        section.classList.remove('active');
                    }
                });
                // Cập nhật tiêu đề trang
                const activeLink = document.querySelector(`#sidebar-wrapper .nav-link[data-section="${sectionId}"]`);
                if (activeLink) {
                    pageTitleElement.textContent = activeLink.textContent.trim();
                }
            }

            // --- Xử lý click sidebar ---
            sidebarLinks.forEach(link => {
                link.addEventListener('click', function (event) {
                    // Không xử lý cho link Đăng Xuất
                    if (this.getAttribute('href') === '/logout') return;

                    event.preventDefault();
                    const sectionId = this.getAttribute('data-section');

                    sidebarLinks.forEach(l => l.classList.remove('active'));
                    this.classList.add('active');

                    showSection(sectionId);
                    // Lưu trạng thái vào localStorage để nhớ lần sau
                    localStorage.setItem('adminActiveSection', sectionId);
                });
            });

            // --- Toggle Sidebar ---
            if (menuToggle) {
                menuToggle.addEventListener('click', function () {
                    wrapper.classList.toggle('toggled');
                });
            }

            // --- Khởi tạo trang ---
            const savedSection = localStorage.getItem('adminActiveSection') || 'dashboard';
            const initialLink = document.querySelector(`#sidebar-wrapper .nav-link[data-section="${savedSection}"]`);
            if (initialLink) {
                initialLink.click(); // Kích hoạt click để hiển thị đúng section và active link
            } else { // Fallback nếu không tìm thấy link
                document.querySelector('#sidebar-wrapper .nav-link[data-section="dashboard"]').click();
            }

            // --- Quản lý Bài Đăng ---
            const postsTableBody = document.getElementById('postsTableBody');
            const postModal = new bootstrap.Modal(document.getElementById('postModal'));
            const postForm = document.getElementById('postForm');
            const postModalLabel = document.getElementById('postModalLabel');
            const editPostIdInput = document.getElementById('editPostId');
            const postStatusSelect = document.getElementById('postStatus');
            const reasonRejectContainer = document.getElementById('reasonRejectContainer');
            const postReasonRejectInput = document.getElementById('postReasonReject');

            function renderPosts() {
                if (!postsTableBody) return;
                postsTableBody.innerHTML = ''; // Xóa nội dung cũ
                if (samplePosts.length === 0) {
                    postsTableBody.innerHTML = '<tr><td colspan="6" class="text-center">Chưa có bài đăng nào.</td></tr>';
                    return;
                }
                samplePosts.forEach((post, index) => {
                    const row = postsTableBody.insertRow();
                    row.innerHTML = `
                        <th scope="row">${index + 1}</th>
                        <td>${post.title}</td>
                        <td>${post.author}</td>
                        <td>${new Date(post.createdAt).toLocaleDateString('vi-VN')}</td>
                        <td><span class="status-${post.status}">${post.status.charAt(0).toUpperCase() + post.status.slice(1)}</span></td>
                        <td class="text-center">
                            <button class="btn btn-sm btn-info btn-action edit-post-btn" data-id="${post.id}"><i class="fas fa-edit"></i> Sửa</button>
                            <button class="btn btn-sm btn-danger btn-action delete-item-btn" data-id="${post.id}" data-name="${post.title}" data-type="post"><i class="fas fa-trash"></i> Xóa</button>
                        </td>
                    `;
                });
                addPostEventListeners();
            }

            function addPostEventListeners() {
                document.querySelectorAll('.edit-post-btn').forEach(button => {
                    button.addEventListener('click', function() {
                        currentEditingPostId = parseInt(this.getAttribute('data-id'));
                        const post = samplePosts.find(p => p.id === currentEditingPostId);
                        if (post) {
                            postModalLabel.textContent = 'Sửa Bài Đăng';
                            editPostIdInput.value = post.id;
                            document.getElementById('postTitle').value = post.title;
                            document.getElementById('postAuthor').value = post.author; // Giả sử admin không sửa tác giả
                            document.getElementById('postContent').value = post.content;
                            postStatusSelect.value = post.status;
                            handleReasonRejectVisibility(); // Ẩn/hiện lý do từ chối
                            postReasonRejectInput.value = post.reason_reject || '';
                            postModal.show();
                        }
                    });
                });
                addDeleteItemEventListeners(); // Gắn lại event cho nút xóa chung
            }
             postStatusSelect.addEventListener('change', handleReasonRejectVisibility);

            function handleReasonRejectVisibility() {
                if (postStatusSelect.value === 'rejected') {
                    reasonRejectContainer.style.display = 'block';
                } else {
                    reasonRejectContainer.style.display = 'none';
                    postReasonRejectInput.value = ''; // Xóa giá trị nếu không phải rejected
                }
            }


            // Mở modal thêm mới
            const addPostModalButton = document.querySelector('[data-bs-target="#addPostModal"]');
            if (addPostModalButton) { // Nút Thêm Bài Đăng Mới dùng chung modal #postModal
                addPostModalButton.addEventListener('click', function() {
                    currentEditingPostId = null;
                    postModalLabel.textContent = 'Thêm Bài Đăng Mới';
                    postForm.reset();
                    editPostIdInput.value = '';
                    document.getElementById('postAuthor').value = 'admin'; // Giả sử admin là người tạo
                    handleReasonRejectVisibility(); // Ẩn lý do từ chối khi thêm mới
                    postModal.show();
                });
            }


            postForm.addEventListener('submit', function(event) {
                event.preventDefault();
                const formData = new FormData(postForm);
                const postData = Object.fromEntries(formData.entries());

                if (currentEditingPostId) { // Sửa bài
                    const index = samplePosts.findIndex(p => p.id === currentEditingPostId);
                    if (index !== -1) {
                        samplePosts[index] = { ...samplePosts[index], ...postData, id: currentEditingPostId };
                    }
                } else { // Thêm mới
                    postData.id = samplePosts.length > 0 ? Math.max(...samplePosts.map(p => p.id)) + 1 : 1;
                    postData.createdAt = new Date().toISOString().split('T')[0];
                    // postData.author = 'admin'; // Gán ở trên rồi
                    samplePosts.push(postData);
                }
                renderPosts();
                postModal.hide();
                postForm.reset();
            });

            // --- Quản lý Người Dùng ---
            const usersTableBody = document.getElementById('usersTableBody');
            function renderUsers() {
                if (!usersTableBody) return;
                usersTableBody.innerHTML = ''; // Xóa nội dung cũ
                if (sampleUsers.length === 0) {
                    usersTableBody.innerHTML = '<tr><td colspan="7" class="text-center">Chưa có người dùng nào.</td></tr>';
                    return;
                }
                sampleUsers.forEach((user, index) => {
                    const row = usersTableBody.insertRow();
                    row.innerHTML = `
                        <th scope="row">${index + 1}</th>
                        <td>${user.username}</td>
                        <td>${user.email}</td>
                        <td>${user.fullName}</td>
                        <td>${user.role.charAt(0).toUpperCase() + user.role.slice(1)}</td>
                        <td><span class="badge bg-${user.isActive ? 'success' : 'danger'}">${user.isActive ? 'Hoạt động' : 'Khóa'}</span></td>
                        <td class="text-center">
                            <button class="btn btn-sm btn-info btn-action edit-user-btn" data-id="${user.id}"><i class="fas fa-user-edit"></i> Sửa</button>
                            <button class="btn btn-sm btn-danger btn-action delete-item-btn" data-id="${user.id}" data-name="${user.username}" data-type="user"><i class="fas fa-user-slash"></i> Xóa</button>
                        </td>
                    `;
                });
                 addDeleteItemEventListeners(); // Gắn lại event cho nút xóa chung
                 addUserEventListeners();
            }

            function addUserEventListeners() {
                // Logic sửa user (nếu cần tạo modal riêng cho user)
                document.querySelectorAll('.edit-user-btn').forEach(button => {
                    button.addEventListener('click', function() {
                        const userId = parseInt(this.getAttribute('data-id'));
                        alert(`Chức năng sửa người dùng ID: ${userId} chưa được triển khai trong bản demo này.`);
                        // Bạn có thể tạo một modal tương tự như postModal cho việc sửa user
                    });
                });
            }


            // --- Xử lý Xóa chung (Bài đăng & Người dùng) ---
            const deleteConfirmModal = new bootstrap.Modal(document.getElementById('deleteConfirmModal'));
            const confirmDeleteButton = document.getElementById('confirmDeleteButton');
            const itemNameToDeleteElement = document.getElementById('itemNameToDelete');

            function addDeleteItemEventListeners() {
                document.querySelectorAll('.delete-item-btn').forEach(button => {
                    // Gỡ bỏ event listener cũ nếu có để tránh gọi nhiều lần
                    const newButton = button.cloneNode(true);
                    button.parentNode.replaceChild(newButton, button);

                    newButton.addEventListener('click', function() {
                        itemToDelete.id = parseInt(this.getAttribute('data-id'));
                        itemToDelete.type = this.getAttribute('data-type');
                        const itemName = this.getAttribute('data-name');
                        itemNameToDeleteElement.textContent = itemName;
                        deleteConfirmModal.show();
                    });
                });
            }

            confirmDeleteButton.addEventListener('click', function() {
                if (itemToDelete.type === 'post' && itemToDelete.id !== null) {
                    samplePosts = samplePosts.filter(p => p.id !== itemToDelete.id);
                    renderPosts();
                } else if (itemToDelete.type === 'user' && itemToDelete.id !== null) {
                    sampleUsers = sampleUsers.filter(u => u.id !== itemToDelete.id);
                    renderUsers();
                }
                deleteConfirmModal.hide();
                itemToDelete = { id: null, type: null }; // Reset
            });


            // --- Gọi hàm render lần đầu ---
            renderPosts();
            renderUsers();
            // Cập nhật số liệu dashboard (ví dụ)
            document.getElementById('pending-posts-count').textContent = samplePosts.filter(p=>p.status === 'pending').length;
            document.getElementById('new-users-count').textContent = sampleUsers.length; // Hoặc một tiêu chí "mới" khác

        });
    </script>
</body>
